<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmadaidin.imgfilter.MainActivity">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Image"
        android:id="@+id/loadImgButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="loadImagefromGallery"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgView"
        android:layout_below="@+id/loadImgButton"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/resetImgButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto"
        android:id="@+id/filterButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="filterImage"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smooth"
        android:id="@+id/smoothButton"
        android:onClick="smoothImage"
        android:layout_alignTop="@+id/filterButton"
        android:layout_toEndOf="@+id/filterButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sharp"
        android:id="@+id/sharpButton"
        android:onClick="sharpImage"
        android:layout_alignTop="@+id/smoothButton"
        android:layout_toEndOf="@+id/smoothButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blur"
        android:id="@+id/blurButton"
        android:onClick="blurImage"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/sharpButton"
        android:layout_toEndOf="@+id/sharpButton" />
    <Button
        android:text="Edge 0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edge1button"
        android:onClick="detectEdge1"
        android:layout_above="@+id/filterButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetImgButton"
        android:layout_above="@+id/edge1button"
        android:layout_alignParentStart="true"
        android:onClick="resetImage" />

    <Button
        android:text="Robert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/robertButton"
        android:layout_below="@+id/imgView"
        android:layout_toEndOf="@+id/resetImgButton"
        android:onClick="edgeRobert"/>

    <Button
        android:text="Edge 0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edge2button"
        android:onClick="detectEdge2"
        android:layout_alignBaseline="@+id/edge1button"
        android:layout_alignBottom="@+id/edge1button"
        android:layout_toEndOf="@+id/edge1button" />


</RelativeLayout>
